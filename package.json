{
  "name": "@mode-7/zap",
  "version": "0.1.3",
  "description": "Lightweight gesture-first 2D game engine for interactive demos and playable ads",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "build:docs": "npm run build && rm -rf docs/dist && cp -r dist docs/dist && node build-docs-json.js",
    "build:docs-json": "node build-docs-json.js",
    "dev": "tsup src/index.ts --format esm --watch",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "docs": "npx serve docs"
  },
  "keywords": [
    "game-engine",
    "canvas",
    "2d",
    "gestures",
    "touch",
    "playable-ads",
    "interactive",
    "lightweight",
    "html5",
    "typescript",
    "animations",
    "easing"
  ],
  "author": "Mode7 <hello@mode7.studio>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mode7Labs/zap.git"
  },
  "homepage": "https://mode7labs.github.io/zap/",
  "bugs": {
    "url": "https://github.com/Mode7Labs/zap/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
